{% extends 'base.html.twig' %}

{% block title %}Password reset{% endblock %}

{% block body %}
    {{ include("_partials/_title_section.html.twig", { 'name': 'Password reset request' }) }}

    <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h3>Reset Password</h3>
                            </div>
                            <div class="content">
                                <div class="message-flash">
                                
                                </div>
                                {{ form_start(requestPassForm)}}
                                    {{ form_row(requestPassForm.email)}}
                                    <div>
                                        <small>
                                            Enter your email adress and we will send you a link to reste your password.
                                        </small>
                                    </div>
                                    <button class="btn btn-fill-out btn-block">Send password reset email</button>
                                {{ form_end(requestPassForm) }}
                            </div>

                            <div class="form-note text-center">Don't Have an Account? <a href="{{ path('app_register')}}">Sign up now</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
