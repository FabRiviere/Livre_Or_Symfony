{% extends 'base.html.twig' %}

{% block title %}Change Your Password{% endblock %}

{% block body %}

    {# partial title_section #}
    {{ include("_partials/_title_section.html.twig", { 'name': 'Change Password' }) }}

    {# ressource depuis reset-password.html #}
    <div class="login_register_wrap section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-6 col-md-10">
                    <div class="login_wrap">
                        <div class="padding_eight_all bg-white">
                            <div class="heading_s1">
                                <h3>Reset Password</h3>
                            </div>
                            <div class="content">
                                {{ form_start(passForm)}}
                                    {{ form_row(passForm.plainPassword)}}
                                    
                                    <button class="btn btn-fill-out btn-block">Reset password</button>
                                {{ form_end(passForm) }}
                            </div>

                            <div class="form-note text-center">Don't Have an Account? <a href="{{ path('app_register')}}">Sign up now</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
